root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2

;; C++
[**.{cc,cpp,h}]
indent_style = space
indent_size = 2 

[**.{ex,exs}]
indent_style = space
indent_size = 2
max_line_length = 90

[{Makefile,go.mod,go.sum,*.go}]
indent_style = tab
indent_size = 8

[*.md]
trim_trailing_whitespace = false

[*.rb]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

;; Rust
;; https://github.com/rust-lang/rust/blob/master/src/doc/style/style/whitespace.md
[*.rs]
indent_size = 4
indent_style = space
insert_final_newline = false
trim_trailing_whitespace = true

;; from https://github.com/microsoft/TypeScript/blob/master/.editorconfig
[*.{ts,json,js}]
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4
